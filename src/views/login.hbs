<main>
    <div class="container-fluid" id="main_content">
        <!-- Bỏ thân page vào đây -->
        <div class="login-form mx-auto">
            <div style="font-size:50px" class="col text-center">Đăng nhập</div>
            <div class="login-input">
                <input type="text" class="form-control" id="InputAccount" placeholder="Tên tài khoản">
            </div>
            <div class="login-input">
                <input type="password" class="form-control" id="InputPassword" placeholder="Mật khẩu">
            </div>
            <div class="login-input">
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="Remember">
                    <label class="form-check-label" for="Remember">Nhớ mật khẩu</label>
                </div>
            </div>
            <div class="login-button text-center">
                <button type="submit" class="btn btn-primary">Đăng nhập</button>
            </div>
            <div class="login-button text-center">
                <button type="submit" class="btn btn-secondary">Chưa có tài khoản? Đăng ký</button>
            </div>
        </div>

        <!-- End thân page -->
    </div>
</main>