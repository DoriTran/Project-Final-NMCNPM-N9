<main>
    <div class="container-fluid" id="main_content">
        <!-- Bỏ thân page vào đây -->
        <div class="signup-form mx-auto">
            <div style="font-size:50px" class="col text-center">Đăng ký</div>
            <div class="signup-input">
                <input type="text" class="form-control" id="InputAccount" placeholder="Tên tài khoản">
            </div>
            <div class="signup-input">
                <input type="password" class="form-control" id="InputPassword" placeholder="Mật khẩu">
            </div>
            <div class="signup-input">
                <input type="password" class="form-control" id="InputPasswordAgain" placeholder="Nhập lại mật khẩu">
            </div>
            <div class="signup-input">
                <input type="text" class="form-control" id="InputName" placeholder="Họ và tên">
            </div>
            <div class="signup-input">
                <select class="form-control" id="InputGender">
                    <option>Nam</option>
                    <option>Nữ</option>
                </select>
            </div>
            <div class="signup-input">
                <input type="email" class="form-control" id="InputEmail" placeholder="Email">
            </div>
            <div class="signup-input">
                <select class="form-control" id="InputRole">
                    <option>Giảng viên</option>
                    <option>Học viên</option>
                </select>
            </div>
            <div class="signup-input">
                <input type="text" class="form-control" id="InputBankAccount" placeholder="Số tài khoản">
            </div>
            <div class="signup-input">
                <input type="text" class="form-control" id="InputBankName" placeholder="Ngân hàng">
            </div>
            <div class="signup-button text-center">
                <button type="submit" class="btn btn-primary">Đăng ký</button>
            </div>
            <div class="signup-button text-center">
                <button type="submit" class="btn btn-secondary">Đã có tài khoản? Đăng nhập</button>
            </div>
        </div>

        <!-- End thân page -->
    </div>
</main>